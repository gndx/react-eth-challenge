.loading
  height: 100vh
  display: flex
  justify-content: center
  align-items: center

.loading-figure
  display: inline-block
  position: relative
  width: 80px
  height: 80px

.loading-figure div
  display: inline-block
  position: absolute
  left: 8px
  width: 16px
  background: rgb(49, 80, 73)
  animation: loading-figure 1.2s cubic-bezier(0, 0.5, 0.5, 1) infinite

.loading-figure div:nth-child(1)
  left: 8px
  animation-delay: -0.24s

.loading-figure div:nth-child(2)
  left: 32px
  animation-delay: -0.12s

.loading-figure div:nth-child(3)
  left: 56px
  animation-delay: 0

@keyframes loading-figure
  0%
    top: 8px
    height: 64px

  50%, 100%
    top: 24px
    height: 32px

