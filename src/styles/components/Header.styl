header
  width 100%
  display grid
  grid-template-columns 20% 80%
  justify-content space-between
  align-items center
  margin-bottom 20px
  border: 1px solid #0b57a3
  border-radius 10px
  padding 10px
  grid-area: header

.Header__image--container
  display flex
  align-items center
  justify-content center 

.Header__image
  width 150px
  border-radius: 50%

.Header-data
  display flex
  flex-direction column
  padding 0 25px
  gap 15px

.Header-title
  font-size: 4rem
  font-weight: bold

.Header-job-title
  font-size: 2.8rem
  font-weight: bold

.Header-contact
  display flex
  width 50%
  justify-content space-between
  align-items center
  font-size: 3rem 

.Header-address
  font-size: 2rem