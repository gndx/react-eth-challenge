.Header
  display: flex
  justify-content: space-between
  align-items: center
  .Header-avatar
    img 
      width: 180px
      border-radius: 50%
  .Header-title
    font-size: 45px
    color: #13bac3
  .About-title
    font-size: 20px
    color: #13bac3
  .Header-job-title
    padding: 15px 0
    color: #020202
    font-size: 25px
    font-weight: lighter
  .Header-contact
    padding: 10px
    display: flex;
    color: black
    justify-content: space-between
    .Header-website
      a
        color: black
        text-decoration: none;
        cursor: pointer