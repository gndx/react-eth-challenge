.Header
  display flex
  flex-wrap wrap
  box-sizing border-box;
  justify-content center
  border-bottom 3px solid #98ca3f
  grid-column 1/3
  grid-row 1/2
  align-content center
  padding 15px

  .Header-title
    font-size 3em
    margin 0

  div
    align-self center

  img
    margin-right 2rem
    border-color black
    border-radius 50%
    box-shadow 0px 9px 17px 0px rgba(0,0,0,0.24)
    max-width 200px
    max-height 200px


+prefix-classes('About-')
  .title
    font-style italic
    font-weight bold

  .title, .item
    margin auto
    line-height 1.5em
    margin-right .8rem

