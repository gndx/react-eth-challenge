*
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-size: 62.5%;

body
  background-color #00040a
  color #ffffff
  font-family 'Open Sans', sans-serif
  padding 50px

#app
  display grid
  gap 20px
  grid-template-columns 1fr 1fr
  width 100%
  grid-template-areas 'header header' 'profile profile' 'experience experience' 'academic skills' 'interest languages'  



