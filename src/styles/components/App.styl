body
  overflow-x hidden
  margin 0
  padding 0
  box-sizing border-box
  color #f5f5f5
  background rgb(121,9,62)
  background linear-gradient(146deg, rgba(121,9,62,1) 3%, rgba(2,0,36,1) 59%, rgba(0,212,255,1) 100%)
  
 a:link
 a:visited
 a:active
  color #f5f5f5
  text-decoration  none

.header
  display flex
  justify-content space-around
  padding 10px
  margin-block 5px
  border-radius 8px
 

