body
  background-color lightblue
  font-family: Courier, monospace

header
  display: grid
  grid-template-columns: 200px 1fr
  grid-template-rows: repeat(3, 50px)
  justify-items: center
  align-items: center
  letter-spacing: 2.5px

img
  width: 150px
  height: 150px
  border-radius: 50%
  border: 3px dotted white
  grid-column-start: 1
  grid-column-end: 2
  grid-row-start: 1
  grid-row-end: 4

.Profile-title
  text-align: justify
  line-height: 1.5rem
  font-size: 16px

.Experience-title
  font-size: larger
  letter-spacing: 1px

.Experience-item
  font-size: 20px

.Academic-title
  font-size: larger
  letter-spacing: 1px
  
.Academic-item
  font-size: 20px

.Skills-title
  font-size: larger
  letter-spacing: 1px

.Skills-item
  font-size: 20px
  list-style-type: square

.Interest-title
  font-size: larger
  letter-spacing: 1px

.Interest-item
  font-size: 20px
  list-style-type: circle

.Languages-title
  font-size: larger
  letter-spacing: 1px

.Languages-item
  font-size: 20px
  list-style-type: lower-roman