* 
  font-family Arial, Helvetica, sans-serif

h1, p, h2
  margin: 0

p
  font-size: 21px
h1
  font-size: 30px

body
  background-color white

#app
  display: flex;
  justify-content: center;
  flex-direction column
  margin-left: auto;
  margin-right: auto;

.header
  background-color #C4EBFF
  padding 20px 0px
  margin 5px
  display flex
  flex-direction column
  overflow auto;

.header_container
  display flex
  flex-direction row

.avatar_container
  display: flex
  flex-direction column
  color #2F2F2F
  padding: 16px 40px

.info_container
  display: flex
  flex-direction: column
  padding: 39px 6px 30px 10px

.avatar
  border-radius 50%
  height: 200px
  
.inline_container
  display: flex
  flex-direction: row
  flex-wrap: wrap;

.inline_container p
  padding-right: 10px

.Header-Title
  margin-bottom: 10px

.info_container p
  margin-bottom: 10px
