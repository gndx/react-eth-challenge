body
  background: #0F2027
  background: -webkit-linear-gradient(to right, #2C5364, #203A43, #0F2027)
  background: linear-gradient(to right, #2C5364, #203A43, #0F2027)

p
  font-size: 20px
.container
  width: 100%
  display: flex
  flex-direction: column
  align-items: center

.card-container
  background: #59b0d9;
  background: -webkit-linear-gradient(to right, #FFFFFF, #6DD5FA, #59b0d9);
  background: linear-gradient(to right, #FFFFFF, #6DD5FA, #59b0d9)
  width 75%
  display: flex
  flex-direction: column
  border-radius: 10px
  margin-bottom: 10px
  padding: 0px 10px 10px

.header-container
  flex-direction: row

.Header-img-container
  width: 150px
  height: 150px
  margin: 10px 20px
  
.Header-img
  border-radius: 50%
  widht: 100%
  height: 100%

.Header-data
  display: flex
  flex-direction: column

.Header-row-info
  display: flex
  flex-direction: column

.Header-title
  font-size: 35px
  font-weight: bold
  margin: 10px 0px 5px

.Header-job-title
  font-size: 24px
  font-weight: bold
  margin-bottom: 10px

.data-cards
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(20em, 1fr));
  grid-gap: 2em
  width: 100%
  min-height: 100%
  align-self: center
  padding-left: 20px
  padding-right: 20px

.item-card
  dispaly: flex
  flex-direction: column
  padding: 10px 5px
  border: 1px solid grey
  border-radius: 5px
  background: #fcfcfc
  box-shadow: 2px 3px 3px #a2a2a2
  
