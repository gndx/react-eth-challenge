body
  background-color cyan
  font: 14px Helvetica, Arial, sans-serif

// Header segment
.Header
  display flex
  align-items: center

  &-img
    border 1px solid #ddd
    box-shadow 0px 10px 14px rgba(0,0,0, .2)
    border-radius 50%
    height auto
    overflow hidden
    object-fit cover
    height 105px
    width 105px
    margin-right: 20px

  &-info
    width 100%
  &-title
    margin-bottom -10px

// About segment
.About
  display flex
  flex-wrap wrap
  align-items: baseline
  gap 10px

  &-item
    flex: 1 0 31%;

// Experience segment
.Experience-item
  display flex
  flex-wrap wrap
  align-items: baseline
  flex-direction: column

.Academic-segment
  display flex
  align-items baseline
  gap: 15px

.Academic-item
  display flex
  flex-wrap wrap
  align-items: baseline
  flex-direction: column

// Extra segment
.Extra-segment
  display flex
  align-items baseline
  gap: 100px
  
.Interest-item
  display flex
  flex-wrap nowrap
  align-items: baseline
  flex-direction: column

.Items-container
  display flex
  gap 15px
