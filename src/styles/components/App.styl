html, body, div, span, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a
  margin: 0
  padding: 0
  border: 0
  outline: 0
  font-size: 100%
  vertical-align: baseline
  background: transparent
  font-family: Arial, Helvetica, sans-serif

body
  color: #2D2D2D

.container
  display: grid
  grid-template-areas:
    "header"\
    "profile"\
    "experience"\
    "academic"\
    "skill"\
    "interest"\
    "language"
  padding: 5%
  padding-left: 10%
  padding-right: 10%
  
  @media (min-width: 768px)
    display: grid
    grid-template-areas:
      "header header header"\
      "profile profile profile"\
      "experience experience experience"\
      "academic academic skill"\
      "interest language language"    
  
.Header
  display: grid
  grid-area: header
  grid-template-areas:
    "avatar content"\
    "avatar about"
  padding 10px
  margin-top: 5px
  margin-bottom: 5px
  border-bottom: 1px solid
  border-image-slice: 1
  border-image-source: linear-gradient(to left,#b847e1,#205ce7)

.Header__about
  display: grid
  grid-area: about

.Header__avatar
  display: grid
  grid-area: avatar
  justify-content: center
  align-items: center

.Header__avatar img 
  border-radius: 50%
  height: 200px
  
.Header__description
  display: grid
  grid-area: content

