* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  margin-top: 5px;
}

body{
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-color #1A2027;
  color: white;
}

img{
  width: 200px;
  height: 200px;
  border-radius: 160px;
  box-shadow: 0 0 50px rgba(0,0,0, 0.35);
}

a {
  color: #cacaca;
}

.li__inline li {
     display:inline;
     padding-left:3px;
     padding-right:3px;
}
