body
  background-color white;
  font-family: 'Inter', sans-serif;
  font-family: 'Saira Extra Condensed', sans-serif;
  background-image: url('Image.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;

.header__desc
    padding-left: 3rem;
    padding-right: 3rem;
    padding-top: 5rem;
    padding-bottom: 5rem;

.text
  color: #f74626

.about__intro
    padding-left: 3rem;
    padding-right: 6rem;
    padding-bottom: 5rem;

.about__title
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 20px;
    padding-bottom: 20px;
    position: relative;
    color: #f74626

.about__title::after
    content: "";
    position: absolute;
    display: block;
    width: 50px;
    height: 3px;
    background: #f74626
    bottom: 0;
    left: 0;

.resume-title 
    font-size: 26px;
    font-weight: 700;
    margin-top: 20px;
    margin-bottom: 20px;
    color: #050d18;

.resume-item
    padding: 0 0 20px 20px;
    margin-top: -2px;
    border-left: 2px solid  #f74626
    position: relative;
  

.resume-item::before
    content: "";
    position: absolute;
    width: 16px;
    height: 16px;
    border-radius: 50px;
    left: -9px;
    top: 0;
    background: #fff;
    border: 2px solid  #f74626

.container
    box-sizing: border-box;
    display flex
    justify-content: space-evenly

.container_skill
  box-sizing: border-box;
  padding-left: 3rem;
  padding-right: 3rem;
  padding-top: 5rem;
  padding-bottom: 5rem;

.progress
  margin 0.5rem  
  height: 40px;
  background-color rgba(247, 70, 38, 0.87)
  font-size: 30px
  font-weight: bold;
  width: 50%

.skill
  padding 0px 3px 3px 10px

.siete
  width: 70%

.cinco
  width: 50%

.cuatro
  width: 40%

.seis
  width: 60%

.Interest-item
  padding-left: 3rem

.language-item
  padding-left: 3rem

.Interest-title::after
    content: "";
    position: absolute;
    display: block;
    width: 50px;
    height: 3px;
    background: #f74626

.languages-title::after
    content: "";
    position: absolute;
    display: block;
    width: 50px;
    height: 3px;
    background: #f74626