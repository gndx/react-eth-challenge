* 
  font-family Arial, Helvetica, sans-serif

h1, p, h2
  margin: 0

p
  font-size: 21px
h1
  font-size: 30px

body
  background-color white

#app
  display: flex;
  justify-content: center;
  flex-direction column
  margin-left: auto;
  margin-right: auto;

.header
  background-color #b6e3ff
  padding 20px 0px
  margin 10px 10px 0px 10px
  display flex
  flex-direction column
  overflow auto;

.header_container
  display flex
  flex-direction row
  flex-wrap: wrap

.avatar_container
  display: flex
  flex-direction column
  color #2F2F2F
  padding: 16px 40px

.info_container
  display: flex
  flex-direction: column
  padding: 39px 6px 30px 10px

.avatar
  border-radius 50%
  height: 200px
  
.inline_container
  display: flex
  flex-direction: row
  flex-wrap: wrap;

.inline_container p, .inline_container span
  padding-right: 10px

.Header-Title
  margin-bottom: 10px

.info_container p, .Profile-title
  margin-bottom: 10px

.container
  background-color #9be9a8
  padding 30px 50px
  display flex
  flex-direction column
  overflow auto;
  text-align: justify
  margin 10px 10px 0px 10px
  
.Experience-item h2, .Experience-item span
  padding-bottom: 3px

.Experience-item
  padding-bottom: 5px