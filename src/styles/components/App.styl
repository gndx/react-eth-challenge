body
  background-color white
  font-size larger


#app {
  display flex
  flex-flow row wrap
  padding 20px
}

.Header{
  width 100%
  padding 0px 30px 30px 30px
  background-color #18182f
  color white
}

.About {
    width 100%
    background color pink
    display flex
    flex-flow row wrap
    align-items center
}

.About img{
    width 200px
    height 200px
    border-radius 20px
}

.About div ul{
    list-style none
}

.About div ul li:nth-child(1){
    font-size xx-large
    font-weight bold
    padding-bottom 20px
}

